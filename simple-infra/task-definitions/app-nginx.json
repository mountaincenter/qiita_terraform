[
  {
    "name": "app",
    "image": "384657981262.dkr.ecr.ap-northeast-1.amazonaws.com/sample-app:latest",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/sample",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "production"
      }
    },
    "environment": [
      {
        "name": "DATABASE_HOST",
        "value": "sample-db.cbt9oua7na7s.ap-northeast-1.rds.amazonaws.com"
      },
      {
        "name": "DATABASE_NAME",
        "value": "sample_app_production"
      },
      {
        "name": "DATABASE_PASSWORD",
        "value": "password"
      },
      {
        "name": "DATABASE_USERNAME",
        "value": "root"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "RAILS_MASTER_KEY",
        "value": "8c254e9c196423653f46538a1ca1aba7"
      },
      {
        "name": "TZ",
        "value": "Japan"
      }
    ],
    "command": [
      "bash",
      "-c",
      "bundle exec rails db:migrate && bundle exec rails assets:precompile && bundle exec puma -C config/puma.rb"
    ],
    "workingDirectory": "/sample",
    "essential": true
  },
  {
    "name": "nginx",
    "image": "384657981262.dkr.ecr.ap-northeast-1.amazonaws.com/sample-nginx:latest",
    "logConfiguration": {
      "logDriver": "awslogs",
      "secretOptions": null,
      "options": {
        "awslogs-group": "/ecs/sample",
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "production"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 80
      }
    ],
    "workingDirectory": "/sample",
    "volumesFrom": [
      {
        "sourceContainer": "app",
        "readOnly": false
      }
    ],
    "essential": true
  }
]